{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2018",
    "sourceMap": true,
    "strictNullChecks": true,
    "jsx": "react",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "outDir": "./dist",
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/*"
  ],
  "files": ["src/index.tsx"]
}
