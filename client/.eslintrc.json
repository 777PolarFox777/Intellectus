{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "useJSXTextNode": true
  },
  "env": {
    "browser": true,
    "jest/globals": true
  },
  "plugins": [
    "@typescript-eslint",
    "prefer-arrow",
    "redux-saga",
    "react-hooks",
    "jest"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "airbnb",
    "plugin:redux-saga/recommended",
    "plugin:jest/recommended"
  ],
  "rules": {
    "no-console": ["error", { "allow": ["warn", "error", "info"] }],
    "semi": "error",
    "import/prefer-default-export": "off",
    "react/jsx-filename-extension": "off",
    "@typescript-eslint/explicit-function-return-type": ["error", {
      "allowExpressions": true,
      "allowTypedFunctionExpressions": true
    }],
    "@typescript-eslint/member-delimiter-style": ["error", {
      "multiline": {
          "delimiter": "comma",
          "requireLast": true
      },
      "singleline": {
          "delimiter": "comma",
          "requireLast": false
      },
      "overrides": {
        "interface": {
          "multiline": {
            "delimiter": "semi",
            "requireLast": true
          }
        }
      }}],
    "function-paren-newline": ["error", "multiline-arguments"],
    "prefer-arrow/prefer-arrow-functions": "error",
    "prefer-arrow-callback": "error",
    "padding-line-between-statements": [
      "error",
      { "blankLine": "always", "prev": ["const", "let", "var", "import", "cjs-import", "export", "cjs-export"], "next": "*"},
      { "blankLine": "any", "prev": ["const", "let", "var", "import", "cjs-import", "export", "cjs-export"], "next": ["const", "let", "var", "import", "cjs-import", "export", "cjs-export"]},
      { "blankLine": "always", "prev":  "*", "next": ["expression", "return", "block-like", "break", "continue", "switch", "try", "throw"]}
    ],
    "multiline-comment-style": "error",
    "no-multiple-empty-lines": ["error", { "max":  1, "maxEOF": 1, "maxBOF": 0 }],
    "max-len": ["error", {
      "tabWidth": 2,
      "code": 100,
      "ignoreUrls": true
    }],
    "max-params": "error",
    "eqeqeq": ["error", "always", {"null": "ignore"}],
    "no-param-reassign": "error",
    "indent": ["error", 2, {
      "SwitchCase": 1
    }],
    "new-cap": "error",
    "no-nested-ternary": "error",
    "no-unneeded-ternary": "error",
    "arrow-parens": ["error", "as-needed", { "requireForBlockBody": true }],
    "prefer-const": "error",
    // не поддерживаем WAI-ARIA
    "jsx-a11y/click-events-have-key-events": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "jsx-a11y/no-noninteractive-element-interactions": "off",
    "jsx-a11y/alt-text": "off",
    "jsx-a11y/control-has-associated-label": "off",
    // TODO: содержит баг, включить, когда починят
    // https://github.com/yannickcr/eslint-plugin-react/issues/2454
    "react/jsx-curly-brace-presence": "off",
    // Не распознает optional chaining
    // https://github.com/typescript-eslint/typescript-eslint/issues/1104
    "no-undef": "warn",
    "no-use-before-define": "warn",
    "no-restricted-globals": "warn",
    "no-unused-expressions": "warn"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
